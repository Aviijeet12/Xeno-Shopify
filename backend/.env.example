# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shopify_dashboard
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Hibernate
JPA_SHOW_SQL=false

# JWT
JWT_SECRET=replace-with-generated-secret
JWT_EXPIRATION_SECONDS=3600

# Admin bootstrap
ADMIN_EMAIL=admin@xeno.dev
ADMIN_PASSWORD=ChangeMe123!

# Shopify
SHOPIFY_API_VERSION=2024-10
SHOPIFY_WEBHOOK_SECRET=replace-with-webhook-secret
SHOPIFY_HOST=your-shop.myshopify.com
SHOPIFY_API_KEY=replace-with-api-key
SHOPIFY_API_SECRET=replace-with-api-secret
SHOPIFY_ACCESS_TOKEN=replace-with-access-token
SHOPIFY_REQUEST_TIMEOUT_MS=10000
SHOPIFY_MAX_RETRIES=3
SHOPIFY_RATE_LIMIT_BACKOFF_SECONDS=5

# Vault (optional)
VAULT_ENABLED=false
VAULT_URI=http://localhost:8200
VAULT_TOKEN=replace-with-vault-token
VAULT_SCHEME=http
VAULT_KV_BACKEND=secret
VAULT_APP_NAME=shopify-dashboard
VAULT_CONNECTION_TIMEOUT=5000
VAULT_READ_TIMEOUT=5000
